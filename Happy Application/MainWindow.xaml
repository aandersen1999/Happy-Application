<Window x:Class="Happy_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Happy_Application"
        mc:Ignorable="d"
        Title="Allied MasterComputer" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid Background="#FF272525">
        <Image Source="Resources/Background.jpg" Stretch="Fill"/>
        <Image x:Name="Portrait" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="None" Margin="0,28,0,0"/>
        <Button Content="Button" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="OnClick" Margin="0,0,0,100"/>

    </Grid>
</Window>
